.container{
    position: relative;
    width: 40rpx;
    height: 40rpx;
}
.circle1,.circle2{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #3063b2;
    opacity: 0.6;
    animation: rotation 2s ease-in-out infinite;
}
.circle2{
    animation-delay: -1s;
}
@keyframes rotation{
    0%,100%{
        transform: scale(0);
    }
    50%{
        transform: scale(1);
    }
}