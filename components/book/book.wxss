.container{
    margin-top: 30rpx;
    width: 240rpx;
    height: 360rpx;
    position: relative;
    display: flex;
    box-shadow: 2px 2px 3px #e3e3e3;
}
.container image{
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.description{
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 5rpx 10rpx 8rpx 15rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
    background-color: #fff;
}
.title{
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.author{
    margin-bottom: 10rpx;
    font-size: 20rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    overflow: hidden;
}
.foot{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    font-size: 20rpx;
}
.footer{
    color: #666;
}