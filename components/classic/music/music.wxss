.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.img{
    margin-top: 60rpx;
    width: 422rpx;
    height: 422rpx;
    border-radius: 50%;
}
.play{
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 270rpx;
}
.tag{
    position: relative;
    right: 310rpx;
    bottom: 150rpx;
    width: 46rpx;
    height: 130rpx;
}
.container .content{
    max-width: 550rpx;
    font-size: 36rpx;
}
.rotation{
    animation:rotation 12s linear infinite;
}
@keyframes rotation{
    from{
        transform: rotate(0);
    }
    to{
        transform: rotate(360deg);
    }
}
