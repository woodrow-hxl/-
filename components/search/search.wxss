.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.header{
    position: fixed;
    display: flex;
    width: 100%;
    height: 100rpx;
    align-items: center;
    border-top:1px solid #f5f5f5;
    border-bottom:1px solid #f5f5f5;
    background-color: #fff;
    z-index: 99;
}
.input-wrapper{
    flex: auto;
    display: inline-flex;
    align-items: center;
    margin-left: 24rpx;
    border-radius: 50rpx;
    background-color: #f5f5f5;
}
.ph-text{
    color: #999;
}
.icon{
    width: 28rpx;
    height: 28rpx;
    margin: 0 16rpx 0 24rpx;
}
.ipt{
    width: 470rpx;
    height: 68rpx;
    font-size: 28rpx;
}
.delete{
    width: 28rpx;
    height: 28rpx
}
.box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}
.cancel{
    width: 120rpx;
    text-align: center;
}
.search-wrapper{
    width: 100%;
}
.history{
    width: 100%;
    margin: 160rpx 0 20rpx 0;
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    box-sizing: border-box;
}
.hot-search{
    margin-top: 70rpx;
}
.title{
    display: flex;
    flex-direction: row;
    align-items: center;
    line-height: 30rpx;
}
.rect{
    display: inline-block;
    margin-right: 20rpx;
    width: 10rpx;
    height: 30rpx;
    background-color: #000;
}
.tag-content{
    margin-top: 24rpx;
    margin-left: 30rpx;
    display: flex;
    flex-wrap: wrap;
}
.tag-content tag{
    margin-bottom: 20rpx;
    margin-right: 20rpx;
}
.book-wrapper{
    display: flex;
    margin-top: 100rpx;
    margin-bottom: 20rpx;
    padding: 0 90rpx;
    width: 100%;
    box-sizing: border-box;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}
.loading-center{
    position: absolute;
    top: 50%;
    left:50%;
    transform: translateX(-50%) translateY(-50%);
}
.loading{
    margin: 50rpx 0;
}
.noResult{
    position: absolute;
    top: 50%;
    left:50%;
    transform: translateX(-50%) translateY(-50%);
}