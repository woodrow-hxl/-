.container{
    width: 100%;
}
 .container .bgImg{
    width: 100%;
}
 .userImg{
     position: absolute;
     left: 50%;
     top:252rpx;
     transform: translateX(-50%);
 }
.userImg button{
    width: 120rpx;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    overflow: hidden;
}
.userImg image{
    transform: scale(1.2);
}
.login{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.login image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    transform: scale(1);
}
.about-wrapper{
    position: absolute;
    display: flex;
    width: 750rpx;
    padding: 0 100rpx;
    align-items: center;
    justify-content: space-between;
    transform: translateY(-140rpx);
    box-sizing: border-box;
}
.about,.bookCount{
    display: flex;
    height: 76rpx;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.about text,.like-book{
    font-size: 24rpx;
    color:#999999;
}
.about image{
    width: 34rpx;
}
.like-count{
    font-size: 34rpx;
    color:#000000;
}
.like-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: -22rpx;
}
.like-title{
    margin:30rpx 0;
    width: 100rpx;
    height: 44rpx;
}
.like-list{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.like-list like-list{
    margin-bottom: 20rpx;
    background-color: #fff;
}